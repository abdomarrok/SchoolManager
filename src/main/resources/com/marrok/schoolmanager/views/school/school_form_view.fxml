<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.marrok.schoolmanager.controllers.school.SchoolFormController"
            prefHeight="400.0" prefWidth="800.0">
    <children>
        <HBox alignment="CENTER" spacing="20.0" layoutX="20.0" layoutY="20.0">
            <children>
                <!-- Form Section -->
                <VBox alignment="CENTER" spacing="15.0">
                    <children>
                        <Label text="School Form" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
                        <GridPane hgap="10.0" vgap="10.0">
                            <columnConstraints>
                                <ColumnConstraints halignment="RIGHT" />
                                <ColumnConstraints halignment="LEFT" />
                            </columnConstraints>
                            <children>
                                <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                                <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                                <Label text="Address:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                                <TextField fx:id="addressField" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                                <Label text="Email:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                                <TextField fx:id="emailField" GridPane.rowIndex="2" GridPane.columnIndex="1" />
                            </children>
                        </GridPane>
                        <HBox alignment="CENTER" spacing="10.0">
                            <children>
                                <Button text="Save" onAction="#onSave" />
                                <Button text="Cancel" onAction="#onCancel" />
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <!-- School Info Section -->
                <VBox alignment="CENTER" spacing="15.0" prefWidth="300.0" style="-fx-border-color: #cccccc; -fx-border-width: 1; -fx-padding: 10;">
                    <children>
                        <Label text="Current School Information" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                        <GridPane hgap="10.0" vgap="10.0">
                            <columnConstraints>
                                <ColumnConstraints halignment="RIGHT" />
                                <ColumnConstraints halignment="LEFT" />
                            </columnConstraints>
                            <children>
                                <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                                <Label fx:id="schoolNameLabel" text="-" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                                <Label text="Address:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                                <Label fx:id="schoolAddressLabel" text="-" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                                <Label text="Email:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                                <Label fx:id="schoolEmailLabel" text="-" GridPane.rowIndex="2" GridPane.columnIndex="1" />
                            </children>
                        </GridPane>
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>
</AnchorPane>
